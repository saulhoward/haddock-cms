                        value="DIR_TO_STORE_ORIGINAL_FILES" />
                <medium>
                        <directory 
                                value="ABSOLUTE_PATH_OF_DIR_FOR_WEB_THUMBNAILS" />
                        <web-directory 
                                value="RELATIVE_PATH_OF_DIR_FOR_WEB_THUMBNAILS" />
