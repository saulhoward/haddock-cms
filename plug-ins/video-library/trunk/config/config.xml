	</haddock-project-organisation>
	<page-building>
		<page-builder-class value="VideoLibrary_PageBuilder" />
	</page-building>
	<page-classes>
		<video-page-class value="VideoLibrary_VideoPage" />
		<search-page-class value="VideoLibrary_SearchPage" />
	</page-classes>

	<thumbnails>
